extends layout

block content
  h1 File Management

  if !storageManager
    h2 Can not list files. Please check your <a href="/settings">settings</a>.
  else
    h2 Create File
    form(id='form',style='display:none')
      input(id='file',onchange='fileChange()',type='file')
    button(onclick='upload()') Upload a new file

    h2 All Files
    table
      thead
        tr
          th Filename
          th Actions
        tbody(id='list')
  script(src='/javascripts/files.js',type='text/javascript')
